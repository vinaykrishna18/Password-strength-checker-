    }

    .container {
        text-align: center;
        background: rgba(30, 30, 30, 0.9);
        padding: 30px;
        border-radius: 15px;
        width: 350px;
        box-shadow: 0px 0px 20px rgba(255, 255, 255, 0.2);
    }

    h1 {
        margin-bottom: 15px;
        font-size: 1.6rem;
        background: linear-gradient(to right, cyan, lightgreen);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .input-group {
        position: relative;
        display: flex;
        align-items: center;
    }

    input {
        width: 100%;
        padding: 10px 40px 10px 10px;
        font-size: 1rem;
        border-radius: 8px;
        border: none;
        outline: none;
    }

    .toggle-password {
        position: absolute;
        right: 10px;
        cursor: pointer;
        color: #aaa;
    }

    #strength-bar {
        width: 100%;

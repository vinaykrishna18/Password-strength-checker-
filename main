<h2>Password Strength Checker</h2>
<div class="checker-table">
    <div class="checker-container">
        <div class="password-box">
            <input type="password" id="password" placeholder="Enter your password" />
            <span class="toggle-password" onclick="togglePassword()">üëÅ</span>
        </div>

        <p id="strength-text">
            <span id="strength-label"></span> 
            <span id="score-text"></span>
        </p>

        <ul class="criteria-list" id="criteria-list">
            <li id="length-check">At least 8 characters</li>
            <li id="uppercase-check">Contains uppercase & lowercase</li>
            <li id="number-check">Contains a number</li>
            <li id="symbol-check">Contains a symbol</li>
        </ul>

        <div id="strength-bar"></div>

        <p style="margin-top:10px;">‚Ä¢ You can also get a strong password here:</p>
        <button id="generate-btn">Generate Strong Password</button>
        <p id="generated-password"></p>
    </div>
</div>

<script>
const passwordInput = document.getElementById("password");
const strengthBar = document.getElementById("strength-bar");
const strengthLabel = document.getElementById("strength-label");
const scoreText = document.getElementById("score-text");
const generateBtn = document.getElementById("generate-btn");
const generatedPassword = document.getElementById("generated-password");

passwordInput.addEventListener("input", updateStrength);
generateBtn.addEventListener("click", generatePassword);

function updateStrength() {
    const password = passwordInput.value;
    const strength = checkStrength(password);

    strengthBar.innerHTML = "";
    const bar = document.createElement("div");
    const colors = [
        "linear-gradient(90deg, red, darkred)",
        "linear-gradient(90deg, orangered, orange)",
        "linear-gradient(90deg, gold, yellow)",
        "linear-gradient(90deg, yellowgreen, green)",
        "linear-gradient(90deg, limegreen, cyan)"
    ];
    const texts = [
        "Very Weak ‚ùå",
        "Weak ‚ö†Ô∏è",
        "Moderate üôÇ",
        "Strong üí™",
        "Very Strong üî•"
    ];

    bar.style.width = ((strength.score / 5) * 100) + "%";
    bar.style.background = colors[strength.score - 1] || "transparent";
    strengthLabel.textContent = texts[strength.score - 1] || "";
    scoreText.textContent = `(${strength.score}/5)`;

    strengthBar.appendChild(bar);

    // Update bullet colors
    document.getElementById("length-check").style.color = password.length >= 8 ? "lime" : "#ccc";
    document.getElementById("uppercase-check").style.color = (/[A-Z]/.test(password) && /[a-z]/.test(password)) ? "lime" : "#ccc";
    document.getElementById("number-check").style.color = /\d/.test(password) ? "lime" : "#ccc";
    document.getElementById("symbol-check").style.color = /[^A-Za-z0-9]/.test(password) ? "lime" : "#ccc";
}

function checkStrength(password) {
    let score = 0;
    if (password.length >= 8) score++;
    if (/[A-Z]/.test(password) && /[a-z]/.test(password)) score++;
    if (/\d/.test(password)) score++;
    if (/[^A-Za-z0-9]/.test(password)) score++;
    if (password.length >= 12) score++; // extra credit for long passwords
    return { score };
}

function generatePassword() {
    const length = 12;
    const charset = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*()_+";
    let password = "";
    for (let i = 0; i < length; i++) {
        password += charset.charAt(Math.floor(Math.random() * charset.length));
    }
    generatedPassword.textContent = password;
    passwordInput.value = password;
    updateStrength();
}

function togglePassword() {
    passwordInput.type = passwordInput.type === "password" ? "text" : "password";
}
</script>


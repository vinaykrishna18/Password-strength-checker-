<script>
    const passwordInput = document.getElementById("password");
    const strengthBar = document.getElementById("strength-bar");
    const strengthLabel = document.getElementById("strength-label");
    const scoreText = document.getElementById("score-text");
    const generateBtn = document.getElementById("generate-btn");
    const generatedPassword = document.getElementById("generated-password");
    const togglePassword = document.getElementById("toggle-password");

    passwordInput.addEventListener("input", updateStrength);
    generateBtn.addEventListener("click", generatePassword);
    togglePassword.addEventListener("click", togglePasswordVisibility);

    function updateStrength() {
        const password = passwordInput.value;
        const strength = checkStrength(password);

        strengthBar.innerHTML = "";
        const bar = document.createElement("div");

        const colors = [
            "linear-gradient(90deg, red, darkred)",
            "linear-gradient(90deg, orangered, orange)",
            "linear-gradient(90deg, gold, yellow)",
            "linear-gradient(90deg, yellowgreen, green)",
            "linear-gradient(90deg, limegreen, cyan)"
        ];
        const texts = [
            "Very Weak ‚ùå",
            "Weak ‚ö†Ô∏è",
            "Moderate üôÇ",
            "Strong üí™",
            "Very Strong üî•"
        ];

        bar.style.width = ((strength.score / 5) * 100) + "%";
        bar.style.background = colors[strength.score - 1] || "transparent";

        strengthLabel.textContent = texts[strength.score - 1] || "";
        scoreText.textContent = `(${strength.score}/5)`;

        strengthBar.appendChild(bar);
    }

    function checkStrength(password) {
        let score = 0;
        if (password.length >= 8) score++;
        if (password.length >= 12) score++;
        if (/[A-Z]/.test(password) && /[a-z]/.test(password)) score++;
        if (/\d/.test(password)) score++;
        if (/[^A-Za-z0-9]/.test(password)) score++;
        return { score };
    }

    function generatePassword() {
        const length = 12;
        const lower = "abcdefghijklmnopqrstuvwxyz";
        const upper = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
        const numbers = "0123456789";
        const special = "!@#$%^&*()_+";
        const all = lower + upper + numbers + special;

        let password = [
            lower.charAt(Math.floor(Math.random() * lower.length)),
            upper.charAt(Math.floor(Math.random() * upper.length)),
            numbers.charAt(Math.floor(Math.random() * numbers.length)),
            special.charAt(Math.floor(Math.random() * special.length))
        ];

        for (let i = password.length; i < length; i++) {
            password.push(all.charAt(Math.floor(Math.random() * all.length)));
        }

        password = password.sort(() => Math.random() - 0.5).join("");

        generatedPassword.textContent = password;
        passwordInput.value = password;
        updateStrength();
    }

    function togglePasswordVisibility() {
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            togglePassword.textContent = "ü´£";
        } else {
            passwordInput.type = "password";
            togglePassword.textContent = "üëÅÔ∏è";
        }
    }
</script>
